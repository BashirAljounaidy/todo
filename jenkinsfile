pipeline {
    agent {
        docker {
            image 'maven:3.6.3-jdk-11' // Use the appropriate Maven image
            args '-v $HOME/.m2:/root/.m2' // Mount the Maven local repository
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                sh 'mvn deploy'
            }
        }
    }
    post {
        always {
            junit '**/target/surefire-reports/*.xml' // Adjust the path to your test reports
        }
    }
}
